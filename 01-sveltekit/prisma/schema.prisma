generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = "mysql://user:password@mariadb:3306/database?sslmode=disable&charset=utf8mb4&serverVersion=mariadb-10.10.3"
  shadowDatabaseUrl = "mysql://user:password@mariadb:3306/database_shadow?sslmode=disable&charset=utf8mb4&serverVersion=mariadb-10.10.3"
}

model User {
  id        BigInt         @id @default(autoincrement())
  name      String         @unique
  password  String
  authToken String         @unique
  createdAt DateTime       @default(now())
  Comment   Comment[]
  Post      Conversation[]
}

model Conversation {
  id        BigInt    @id @default(autoincrement())
  userId    BigInt
  subject   String    @default("")
  createdAt DateTime  @default(now())
  Comment   Comment[]
  user      User      @relation(fields: [userId], references: [id])
}

model Comment {
  id        BigInt       @id @default(autoincrement())
  userId    BigInt
  postId    BigInt
  content   String
  createdAt DateTime     @default(now())
  post      Conversation @relation(fields: [postId], references: [id])
  user      User         @relation(fields: [userId], references: [id])
}
