// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:password@mariadb:3306/database?sslmode=disable&charset=utf8mb4&serverVersion=mariadb-10.10.3"
}

model User {
  id    BigInt  @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        BigInt  @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  BigInt
}
